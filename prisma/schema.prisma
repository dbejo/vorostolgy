datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


generator client {
  provider = "prisma-client-js"
}

model Category {
    id        String      @id @default(cuid())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    item Item[]

    @@index([name])
}

model Item {
    id        String      @id @default(cuid())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    category Category @relation(fields: [categoryId], references: [id])
    categoryId String

    @@index([name])
    @@index([categoryId])
}